<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4.2"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <!-- outputLog -->
    <TextView
        android:id="@+id/outputLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:gravity = "right|bottom"
        android:hint="outputLog"
        android:textColorHint="#EFE5FE"
        android:textColor="#EFE5FE"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#45298D" />
    <!-- inputFormula -->
    <TextView
        android:id="@+id/inputFormula"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:gravity = "right|bottom"
        android:hint="inputFormula"
        android:textColorHint="#45298D"
        android:textColor="#45298D"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="#EFE5FE" />
    <!-- button table -->
    <TableLayout
        android:id="@+id/inputButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2">
        <!-- btRow1 -->
        <TableRow
            android:id="@+id/btRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow1 -->
            <Button
                android:id="@+id/sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="sin"
                android:textColor="#45298D"
                android:textSize="18sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btSin" />
            <Button
                android:id="@+id/cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="cos"
                android:textColor="#45298D"
                android:textSize="18sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btCos" />
            <Button
                android:id="@+id/tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="tan"
                android:textColor="#45298D"
                android:textSize="18sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btTan" />
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="C"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btC" />
            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="DEL"
                android:textColor="#45298D"
                android:textSize="16sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btDel" />
        </TableRow>
        <!-- btRow2 -->
        <TableRow
            android:id="@+id/btRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow2 -->
            <Button
                android:id="@+id/fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="n!"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btFac" />
            <Button
                android:id="@+id/mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="%"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btMod" />
            <Button
                android:id="@+id/abs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="|x|"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btAbs" />
            <Button
                android:id="@+id/pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="π"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btPi" />
            <Button
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="e"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btE" />
        </TableRow>
        <!-- btRow3 -->
        <TableRow
            android:id="@+id/btRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow3 -->
            <Button
                android:id="@+id/inv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="x^-1"
                android:textColor="#45298D"
                android:textSize="15sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btInv" />
            <Button
                android:id="@+id/pow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="y^x"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btPow" />
            <Button
                android:id="@+id/rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="x√y"
                android:textColor="#45298D"
                android:textSize="18sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btRt" />
            <Button
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="log"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btLog" />
            <Button
                android:id="@+id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="ln"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btLn" />
        </TableRow>
        <!-- btRow4 -->
        <TableRow
            android:id="@+id/btRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow4 -->
            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt7" />
            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt8" />
            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt9" />
            <Button
                android:id="@+id/par1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="("
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btPar1" />
            <Button
                android:id="@+id/par2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=")"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btPar2" />
        </TableRow>
        <!-- btRow5 -->
        <TableRow
            android:id="@+id/btRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow5 -->
            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt4" />
            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt5" />
            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt6" />
            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="×"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btMul" />
            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="÷"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btDiv" />
        </TableRow>
        <!-- btRow6 -->
        <TableRow
            android:id="@+id/btRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow6 -->
            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt1" />
            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt2" />
            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt3" />
            <Button
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="+"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btSum" />
            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btSub" />
        </TableRow>
        <!-- btRow7 -->
        <TableRow
            android:id="@+id/btRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- btsRow7 -->
            <Button
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="bt0" />
            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="."
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btPoint" />
            <Button
                android:id="@+id/negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="(-)"
                android:textColor="#45298D"
                android:textSize="20sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btNeg" />
            <Button
                android:id="@+id/exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Exp"
                android:textColor="#45298D"
                android:textSize="17sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btExp" />
            <Button
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="ANS"
                android:textColor="#45298D"
                android:textSize="15sp"
                app:backgroundTint="#EFE5FE"
                android:onClick="btAns" />
        </TableRow>
    </TableLayout>
</LinearLayout>